<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dip" >

        <TableRow android:layout_marginTop="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dip"
                android:text="@string/name"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_medium" >
            </TextView>

            <TextView
                android:id="@+id/tv_callee_name"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_medium" >
            </TextView>
        </TableRow>

        <TableRow android:layout_marginTop="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:text="@string/who"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_medium" >
            </TextView>

            <TextView
                android:id="@+id/tv_callee_who"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_medium" >
            </TextView>
        </TableRow>

        <TableRow android:layout_marginTop="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:text="@string/phone1"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_medium" >
            </TextView>

            <TextView
                android:id="@+id/tv_callee_phone1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:clickable="true"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_medium" >
            </TextView>
        </TableRow>

        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:text="@string/phone2"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_medium" >
            </TextView>

            <TextView
                android:id="@+id/tv_callee_phone2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:clickable="true"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_medium" >
            </TextView>
        </TableRow>
    </TableLayout>

</LinearLayout>